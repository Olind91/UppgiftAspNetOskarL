
@model IEnumerable<ProductEntity>
@{
    ViewData["Title"] = "Products";
}

<section class="best-collection">
    <div class="container">

        <h1 class="collection-title">All Products</h1>


        <div class="collection-grid">

            @foreach (var product in Model)
            {
                {
                    var link = $"products/{product.ArticleNumber}";
                    <div class="collection-grid">

                        <!-- collection-item start -->
                        <a href="/products/@product.ArticleNumber" class="collection-item">                            
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="~/images/products/@product.ImageUrl" alt="@product.ProductName" style="height:295px; width:270px;">
                            }
                            else
                            {
                                <img src="~/images/placeholders/270x295.svg" alt="Image Not available :(" style="height:295px; width:270px;">
                            }                        
                            <div class="body">
                                <div class="title">@product.ProductName</div>
                                <div class="info">
                                    @product.ProductDescription
                                    <i class="add-cart fa-regular fa-cart-plus"></i>
                                </div>
                                <div class="price">@product.Price$</div>                              
                            </div>
                        </a>
                    </div>
                }

            }

        </div>

    </div>

</section>
