@model ProductsVM

<section class="up-to-sell">
    <div class="container">
        <div class="collection-grid">
            @if (Model.PopularProducts.Any())
            {
                var product = Model.PopularProducts.ElementAtOrDefault(0);
                var link = $"products/{product?.ArticleNumber}";
                <div class="item-1">
                    <!-- collection-item start -->
                    <a href="@link" class="collection-item">
                        @if (!string.IsNullOrEmpty(Model.PopularProducts.ElementAtOrDefault(0)?.ImageUrl))
                        {
                            <img src="~/images/products/@Model.PopularProducts.ElementAtOrDefault(0)?.ImageUrl" alt="picture N/A">
                        }
                        else
                        {
                            <img src="~/images/placeholders/369x310.svg" alt="">
                        }
                        <div class="body">
                            <div class="title">@Model.PopularProducts.ElementAtOrDefault(0)?.ProductName</div>
                            <div class="info">
                                <div class="price">@Model.PopularProducts.ElementAtOrDefault(0)?.Price$</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                    <!-- collection-item end -->
                </div>
            }
            <div class="discover">
                <!-- collection-content start -->
                <div class="collection-content">
                    <div class="container">
                        <div class="title-red">UP TO SELL</div>
                        <div class="title">50% OFF</div>
                        <div class="ingress">Get the Best Price</div>
                        <div class="text">Get the best daily offer et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren no sea taki</div>
                        <a href="#" class="link">Discover More</a>
                    </div>
                </div>               
            </div>
                <!-- collection-content end -->
            @if (Model.PopularProducts.Any())
            {

                var product = Model.PopularProducts.ElementAtOrDefault(1);
                var link = $"products/{product?.ArticleNumber}";
                <div class="item-2">
                    <!-- collection-item start -->
                    <a href="@link" class="collection-item">
                        @if (!string.IsNullOrEmpty(Model.PopularProducts.ElementAtOrDefault(1)?.ImageUrl))
                        {
                            <img src="~/images/products/@Model.PopularProducts.ElementAtOrDefault(1)?.ImageUrl" alt="@Model.PopularProducts.ElementAtOrDefault(1)?.ProductName">
                        }
                        else
                        {
                            <img src="~/images/placeholders/369x310.svg" alt="">
                        }
                        <div class="body">
                            <div class="title">@Model.PopularProducts.ElementAtOrDefault(1)?.ProductName</div>
                            <div class="info">
                                <div class="price">@Model.PopularProducts.ElementAtOrDefault(1)?.Price$</div>
                                <i class="add-cart fa-regular fa-cart-plus"></i>
                            </div>
                        </div>
                    </a>
                    <!-- collection-item end -->
                </div>
            }

            
        </div>
    </div>
</section>